<div class="row">
  <div class="col-md-3">
    <%= render 'menu_filter' %>
  </div>
  <div class="col-md-9">
    <% if @loans.empty? %>
      <%= render 'shared/empty_index',
        message: t("loans.empty.#{(params[:filter] || action_name)}_html") %>
    <% else %>
      <table class="table table-striped table-hover table-condensed" data-endless-container="true">
        <thead>
          <tr>
            <th><%= Loan.human_attribute_name 'customer' %></th>
            <th><%= Loan.human_attribute_name 'amount' %></th>
            <th class="visible-lg"><%= Loan.human_attribute_name 'payments_count' %></th>
            <th class="visible-lg"><%= Loan.human_attribute_name 'expire_at' %></th>
            <%= show_filter_column %>
            <th colspan="2">
              <%= link_to_new new_loan_path, class: 'btn btn-default btn-xs pull-right' %>
            </th>
          </tr>
        </thead>

        <tbody>
          <%= render partial: 'tbody', collection: @loans, as: :loan %>
        </tbody>
      </table>

      <div class="pagination-container">
        <%= will_paginate @loans %>
      </div>
    <% end %>
  </div>
</div>

<hr />

<div class="footer">
  <%= link_to_new new_loan_path, class: 'btn btn-primary' %>
</div>
