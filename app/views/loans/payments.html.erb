<p>
  <strong><%= Loan.human_attribute_name 'customer' %>:</strong>
  <%= @loan.customer %>
</p>
<p>
  <strong><%= Loan.human_attribute_name 'payment' %>:</strong>
  <%= number_to_currency @loan.payment %>
</p>
<p>
  <strong><%= Loan.human_attribute_name 'user' %></strong>:
  <%= @loan.user %>
</p>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= Payment.human_attribute_name 'number' %></th>
      <th><%= Payment.human_attribute_name 'expired_at' %></th>
      <th><%= Payment.human_attribute_name 'paid_at' %></th>
    </tr>
  </thead>

  <tbody>
    <% @loan.payments.each do |payment| %>
      <tr>
        <td><%= payment.number %></td>
        <td><%= l payment.expired_at %></td>
        <td><%= l(payment.paid_at, format: :minimal) if payment.paid_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<%= link_to_index loans_path %>
