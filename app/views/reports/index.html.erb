<div class="row">
  <div class="col-md-3">
    <%= render 'menu_filter' %>
    <br />
    <%= render 'shared/summary' %>
  </div>
  <div class="col-md-9">
    <%= render 'shared/search',
      url: reports_path(filter: (params[:filter] || 'payments')) %>

    <% if @collection.empty? %>
      <%= render 'shared/empty_index', message: t('.empty_html') %>
    <% else %>
      <table class="table table-striped table-hover table-condensed" data-endless-container="true">
        <thead>
          <tr>
            <th><%= Customer.model_name.human(count: 1) %></th>
            <th><%= Loan.model_name.human(count: 1) %></th>
            <th><%= Payment.model_name.human(count: 1) %></th>
            <th class="hidden-xs"><%= Loan.human_attribute_name 'amount' %></th>
            <th class="hidden-xs"><%= @filter.human_attribute_name 'expire_at' %></th>
            <th class="hidden-xs"><%= @filter.human_attribute_name 'paid_at' %></th>
          </tr>
        </thead>

        <tbody>
          <%= render partial: 'tbody', collection: @collection, as: :record %>
        </tbody>
      </table>

      <div class="pagination-container">
        <%= will_paginate @collection %>
      </div>
    <% end %>
  </div>
</div>
