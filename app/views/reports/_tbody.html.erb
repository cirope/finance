  <td><%= show_current_payments(record) if record.loan %></td>
  <td class="hidden-xs"><%= number_to_currency record.amount %></td>
  <td class="hidden-xs"><%= l record.expire_at %></td>
  <td class="hidden-xs"><%= l record.paid_at.to_date if record.paid_at %></td>
</tr>
