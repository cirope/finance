<div class="row">
  <div class="col-lg-3">
    <%= content_tag :div, nil, data: {
      calendar: render(partial: 'calendar_data', formats: [:json])
    } %>
    <br />
  </div>
  <div class="col-lg-9">
    <h4>
      <%= l @current_date, format: :minimal %>
    </h4>

    <hr />

    <% if @schedules.empty? %>
      <%= render 'empty_index' %>
    <% else %>
      <%= render @schedules, as: :schedule %>
    <% end %>
  </div>
</div>
