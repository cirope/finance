<% if @customers.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Customer.human_attribute_name 'name' %></th>
        <th><%= Customer.human_attribute_name 'lastname' %></th>
        <th><%= Customer.human_attribute_name 'identification' %></th>
        <th><%= Customer.human_attribute_name 'address' %></th>
        <th><%= Customer.human_attribute_name 'city' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.lastname %></td>
          <td><%= customer.identification %></td>
          <td><%= customer.address %></td>
          <td><%= customer.city %></td>
          <td><%= link_to_show customer %></td>
          <td><%= link_to_edit edit_customer_path(customer) %></td>
          <td><%= link_to_destroy customer %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to_new new_customer_path, class: 'btn btn-primary' %>
