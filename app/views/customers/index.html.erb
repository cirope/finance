<%= render 'search' %>

<br />
<% if @customers.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th><%= Customer.human_attribute_name 'name' %></th>
        <th><%= Customer.human_attribute_name 'identification' %></th>
        <th class="hidden-xs"><%= Customer.human_attribute_name 'email' %></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer, customer %></td>
          <td><%= customer.identification %></td>
          <td class="hidden-xs"><%= mail_to customer.email, customer.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<hr />

<div class="footer">
  <div class="btn-group">
    <%= link_to '#', class: 'btn btn-primary dropdown-toggle', data: { toggle: 'dropdown'} do %>
      <%= t('customers.new.title') %> <span class="caret"></span>
    <% end %>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to PrivateCustomer.model_name.human(count: 1), new_private_customer_path %>
      </li>
      <li>
        <%= link_to PublicCustomer.model_name.human(count: 1), new_public_customer_path %>
      </li>
    </ul>
  </div>
</div>
