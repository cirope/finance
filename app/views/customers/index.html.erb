<% if @customers.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-hover table-condensed" data-endless-container="true">
    <thead>
      <tr>
        <th><%= Customer.human_attribute_name 'lastname' %></th>
        <th><%= Customer.human_attribute_name 'name' %></th>
        <th><%= Customer.human_attribute_name 'identification' %></th>
        <th><%= Customer.human_attribute_name 'address' %></th>
        <th><%= Customer.human_attribute_name 'company' %></th>
        <th><%= Customer.human_attribute_name 'city' %></th>
        <th colspan="3">
          <%= link_to_new new_customer_path, class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: 'tbody', collection: @customers, as: :customer %>
    </tbody>
  </table>

  <div class="pagination-container">
    <%= will_paginate @customers %>
  </div>
<% end %>

<hr />

<div class="footer">
  <%= link_to_new new_customer_path, class: 'btn btn-primary' %>
</div>
