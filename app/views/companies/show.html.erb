<div class="page-header">
  <h2><%= @company %></h2>
</div>

<p>
  <strong><%= Company.human_attribute_name 'tax_id' %></strong>:
  <%= @company.tax_id %>
</p>
<p>
  <strong><%= Company.human_attribute_name 'address' %></strong>:
  <%= @company.address %>
</p>

<p>
  <strong><%= Phone.model_name.human count: 0 %></strong>:
</p>
<ul>
  <% @company.phones.each do |phone| %>
    <li><%= phone %></li>
  <% end %>
</ul>

<hr />

<%= link_to_edit edit_company_path(@company) %> |
<%= link_to_index companies_path %>
