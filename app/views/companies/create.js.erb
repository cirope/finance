<% if @company.persisted? %>
  if ($('#modal form').length == 1) {
    $('#modal').modal('hide');
  } else {
    $('#modal form.new_company').remove();
    $('#modal .modal-title').text('<%= j t('companies.new.title') %>');
    $('#modal form').show().find('[autofocus]').focus();
  }

  $('select[data-update-after-place-change]').html(
    '<%= j options_from_collection_for_select(Company.ordered, :id, :name, @company.id) %>'
  );
<% else %>
  <%= render template: 'companies/new' %>
<% end %>
