<% if @companies.empty? %>
  <%= render 'shared/empty_index', message: t('.empty_html') %>
<% else %>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= Company.human_attribute_name 'name' %></th>
        <th colspan="3">
          <%= link_to_new new_company_path, class: 'btn btn-default btn-xs pull-right' %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= link_to_show company %></td>
          <td><%= link_to_edit edit_company_path(company) %></td>
          <td><%= link_to_destroy company %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<hr />

<div class="footer">
  <%= link_to_new new_company_path, class: 'btn btn-primary' %>
</div>
