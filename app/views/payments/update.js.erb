<% if @payment.errors.any? %>
  $('form.edit_payment').replaceWith('<%= j render 'form' %>');
  $('#modal').find('[autofocus]').focus();
<% else %>
  $('[data-payment=\"<%= @payment.id %>\"]').replaceWith(
    '<%= j render @payment %>'
  );

  total_debt = $('[data-loan-updateable-info]');
  total_debt.replaceWith('<%= j render(partial: 'loans/updateable_info') %>');
  total_debt.effect('highlight', 'slow');
<% end %>
