<%= simple_form_for([@loan, @payment],
  data: ({ remote: true } if request.xhr?))  do |f| %>

  <div class="form-inputs">
    <%= f.input :paid_at, as: :date_picker,
      input_html: { autofocus: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
